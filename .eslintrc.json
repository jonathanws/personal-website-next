{
	"extends": "next/core-web-vitals",
	"rules": {
		// warns against not using dangling commas
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        // warns against not using spaces after commas
        "comma-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        // warns against trailing spaces
        "no-trailing-spaces": "warn",
        // enforces single-spaces inside one-line object literals
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        // enforces no blank lines inside of blocks at beginning and start
        "padded-blocks": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        //add customize rules here as per your project's needs
        "react/react-in-jsx-scope": "off",
        "semi": [
            "error",
            "never"
        ],
        // enforces member sorting within objects
        "sort-keys": [
            "error",
            "asc",
            {
                "caseSensitive": false,
                "natural": true,
                "minKeys": 2
            }
        ]
	}
}
